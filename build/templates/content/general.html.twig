{% extends "base.html.twig" %}

{% block content %}
  <section class="section">
    <div class="container">
    {# predefined page content? #}
    {% if page.content %}
      <div class="row gap-y">
        {# Sidebar #}
        <div class="col-md-5 col-xl-4">
          <a class="btn btn-xl btn-outline-primary btn-block d-md-none"
          data-toggle="collapse" href="#sidebar" role="button" aria-expanded="false" aria-controls="sidebar">
            <i class="ti-angle-down mr-1"></i> Indexes
          </a>
          <aside class="sidebar sidebar-sticky rendered-summary collapse d-md-block" id="sidebar">
            {% if page.api_reference %}
              <p class="ml-2 mt-2">
                <a href="{{ urls.console ~ '#/' ~ page.api_reference ~ '/' }}" class="btn btn-round btn-primary">
                  <i class="fa fa-chevron-right mr-1"></i>
                  Jump to API endpoints
                </a>
              </p>
            {% endif %}
            {{ page.summary|raw }}
          </aside>
        </div>
        {# Content #}
        <div class="col-md-7 col-xl-8">
          <article class="rendered-content" id="article">
            {{ page.content|raw }}
          </article>
        </div>
      </div>
    {% endif %}
    </div>
  </section>
{% endblock %}
