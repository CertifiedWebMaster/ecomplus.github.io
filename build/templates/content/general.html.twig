{% extends "base.html.twig" %}

{% block content %}
  <section class="section">
    <div class="container">
    {# predefined page content? #}
    {% if page.content %}
      <div class="row gap-y">
        {# Sidebar #}
        <div class="col-lg-5 col-xl-4">
          <aside class="sidebar sidebar-sticky rendered-summary" id="sidebar">
            {% if page.api_reference %}
              <p class="ml-2 mt-2">
                <a href="{{ urls.console ~ page.api_reference }}" class="btn btn-round btn-primary">
                  <i class="fa fa-chevron-right mr-1"></i>
                  Jump to API endpoints
                </a>
              </p>
            {% endif %}
            {{ page.summary|raw }}
          </aside>
        </div>
        {# Content #}
        <div class="col-lg-7 col-xl-8">
          <article class="rendered-content" id="article">
            {{ page.content|raw }}
          </article>
        </div>
      </div>
    {% endif %}
    </div>
  </section>
{% endblock %}
