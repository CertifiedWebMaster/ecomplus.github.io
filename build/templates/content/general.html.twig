{% extends "base.html.twig" %}

{% block content %}
  <section class="section">
    <div class="container">
    {# predefined page content? #}
    {% if page.content %}
      <div class="row gap-y">
        {# Sidebar #}
        <div class="col-lg-5 col-xl-4">
          {% if page.summary %}
            <aside class="sidebar sidebar-sticky rendered-summary" id="sidebar">
              {{ page.summary|raw }}
            </aside>
          {% else %}
            <aside class="sidebar rendered-summary hidden" id="sidebar"></aside>
          {% endif %}
        </div>
        {# Content #}
        <div class="col-lg-7 col-xl-8">
          <article class="rendered-content" id="article">
            {{ page.content|raw }}
          </article>
        </div>
      </div>
    {% endif %}
    </div>
  </section>
{% endblock %}
