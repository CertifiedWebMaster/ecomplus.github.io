{% extends "base.html.twig" %}

{% block content %}
{## render bradcrumbs nav #}
{##}{% set breadcrumbs = page.url|split('/') %}
{##}{% set breadlink = '' %}
<nav class="bb-1" aria-label="breadcrumb">
  <div class="container">
    <ol class="breadcrumb px-0">
      <li class="breadcrumb-item"><a href="/">home</a></li>
{##}{% for bread in breadcrumbs %}
{##}{##}{% if bread != '' %}
{##}{##}{##}{% set breadlink = breadlink ~ '/' ~ bread %}
      <li class="breadcrumb-item"><a href="{{ breadlink }}">{{ bread }}</a></li>
{##}{##}{% endif %}
{##}{% endfor %}
    </ol>
  </div>
</nav>

{## predefined page content? #}
{##}{% if page.content %}
{##}{##}{% if page.summary %}
<div class="container">
  <div class="row">
    <!-- Sidebar -->
    <div class="col-md-4 col-xl-3">
      <aside class="sidebar sidebar-sticky rendered-summary">
{{ page.summary|raw }}
      </aside>
    </div>

    <!-- Content -->
    <div class="col-md-7 col-xl-8 ml-md-auto rendered-content">
{{ page.content|raw }}
    </div>
  </div>
</div>
{##}{##}{% else %}
<div class="container rendered-content">
{{ page.content|raw }}
</div>
{##}{##}{% endif %}
{##}{% endif %}
{% endblock %}
