{% extends "base.html.twig" %}

{% block content %}
{## predefined page content? #}
{##}{% if page.content %}
{##}{##}{% if page.summary %}
<div class="container">
  <div class="row">
    <!-- Sidebar -->
    <div class="col-md-4 col-xl-3">
      <aside class="sidebar sidebar-sticky rendered-summary">
{{ page.summary|raw }}
      </aside>
    </div>

    <!-- Content -->
    <div class="col-md-7 col-xl-8 ml-md-auto rendered-content">
{{ page.content|raw }}
    </div>
  </div>
</div>
{##}{##}{% else %}
<div class="container rendered-content">
{{ page.content|raw }}
</div>
{##}{##}{% endif %}
{##}{% endif %}
{% endblock %}
