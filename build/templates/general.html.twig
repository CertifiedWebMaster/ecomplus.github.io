{% extends "base.html.twig" %}

{% block content %}
{## render bradcrumbs nav #}
{##}{% set breadcrumbs = page.url|split('/') %}
{##}{% set breadlink = '' %}
<nav class="purple-gradient text-white fw-500" aria-label="breadcrumb">
  <div class="container">
    <ol class="breadcrumb px-0">
      <li class="breadcrumb-item"><a href="/">home</a></li>
{##}{% for bread in breadcrumbs %}
{##}{##}{% if bread != '' %}
{##}{##}{##}{% set breadlink = breadlink ~ '/' ~ bread %}
      <li class="breadcrumb-item"><a href="{{ breadlink }}">{{ bread }}</a></li>
{##}{##}{% endif %}
{##}{% endfor %}
    </ol>
  </div>
</nav>
{## predefined page content? #}
{##}{% if page.content %}
<div class="container rendered-content">
{{ page.content|raw }}
</div>
{##}{% endif %}
{% endblock %}
